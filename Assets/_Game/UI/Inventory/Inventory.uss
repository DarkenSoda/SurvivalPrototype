.hotbarSelectionFrame {
    position: absolute;
    left: -7px;
    top: -7px;
    width: 71px;
    height: 71px;
    border-width: 3px;
    border-color: rgb(255, 0, 0);
}

.hotbarOverlay {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
}
